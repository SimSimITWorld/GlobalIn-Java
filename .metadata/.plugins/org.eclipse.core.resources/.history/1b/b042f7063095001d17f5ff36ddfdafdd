package newprac;

/* 문]
 *     0에서부터 입력한 정수까지의 합을 구하는 프로그램을 작성하시오.
 *     입력은 Scanner 클래스로 구현
 */

import java.util.*;

public class Prac {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int sum = 0;
		System.out.print("정수 입력 : ");
		int a = sc.nextInt();
		
		for(int i = 0; i <=a ;i++) {
			sum += i;
		}
		System.out.println(sum);
		
	}

}
