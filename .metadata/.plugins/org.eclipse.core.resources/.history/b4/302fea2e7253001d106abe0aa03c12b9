package practice;

import java.util.*;

public class Practice_1 {

	public static void main(String[] args) {
		
		String[] members = { "강아지", "고양이", "알파카"};
		
	    int choose;
		Scanner sc = new Scanner(System.in);
		System.out.println("어서오세요 고객님. 원하시는 동물을 선택해주세요.");
		int num1 = sc.nextInt();
		switch (num1) {
		    case 1:
		    	System.out.println("강아지를 입양하셨습니다.");
		    	break;
		    case 2:
		    	System.out.println("고양이를 입양하셨습니다.");
		    	break;
		    case 3:
		    	System.out.println("알파카를 입양하셨습니다.");
		    	break;
		    default:
		    	System.out.println("다시 확인해주세요.");
		}

	}

}
