package newprac;

/* 문]
 *     양의 실수만 입력받아 입력받은 개수만큼 합계와 평균을 출력하시오.
 *     단, 음의 정수를 입력하면 계산 하시오.
 */

import java.util.*;

public class Prac {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		float sum = 0.0f;
		
		System.out.print("입력 : ");
		float a = sc.nextFloat();
		float i = 0.0f;
		int count = 0;
		for(;i>=0.0;) {
			sum+=i;
			System.out.print("양의 실수만 입력 : ");
			i = sc.nextFloat();
			count++;
		}
		System.out.println("합계 : " + sum);
		System.out.println("평균 : " + sum/(count-1));
		
	}

}
